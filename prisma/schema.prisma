generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model GuestSession {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  lastActiveAt DateTime @default(now())

  submissions     Submission[]
  quizAttempts    QuizAttempt[]
  projectProgress ProjectProgress[]
  earnedSkills    EarnedSkill[]
  activityLogs    ActivityLog[]
}

model Stage {
  id          String @id @default(uuid())
  title       String
  slug        String @unique
  description String @db.Text
  order       Int

  modules Module[]
}

model Module {
  id          String @id @default(uuid())
  stageId     String
  title       String
  slug        String @unique
  description String @db.Text
  order       Int

  stage   Stage    @relation(fields: [stageId], references: [id], onDelete: Cascade)
  lessons Lesson[]
}

model Lesson {
  id             String @id @default(uuid())
  moduleId       String
  title          String
  slug           String @unique
  content        String @db.Text
  commonMistakes String @db.Text
  order          Int

  module        Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  exercises     Exercise[]
  quizQuestions QuizQuestion[]
}

model Exercise {
  id             String @id @default(uuid())
  lessonId       String
  prompt         String @db.Text
  starterCode    String @db.Text
  expectedOutput String @db.Text
  testCode       String @db.Text
  hints          String @db.Text
  order          Int

  lesson      Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  submissions Submission[]
}

model QuizQuestion {
  id            String @id @default(uuid())
  lessonId      String
  question      String @db.Text
  type          String
  options       String @db.Text
  correctAnswer String
  explanation   String @db.Text
  order         Int

  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model Submission {
  id         String   @id @default(uuid())
  sessionId  String
  exerciseId String
  code       String   @db.Text
  passed     Boolean
  output     String   @db.Text
  createdAt  DateTime @default(now())

  session  GuestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  exercise Exercise     @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
}

model QuizAttempt {
  id        String   @id @default(uuid())
  sessionId String
  lessonId  String
  answers   String   @db.Text
  score     Int
  total     Int
  createdAt DateTime @default(now())

  session GuestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Project {
  id           String  @id @default(uuid())
  title        String
  slug         String  @unique
  stage        String
  brief        String  @db.Text
  requirements String  @db.Text
  stretchGoals String  @db.Text
  steps        String  @db.Text
  rubric       String  @db.Text
  solutionUrl  String?
  order        Int

  progress ProjectProgress[]
}

model ProjectProgress {
  id          String    @id @default(uuid())
  sessionId   String
  projectId   String
  status      String    @default("NOT_STARTED")
  completedAt DateTime?

  session GuestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  project Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([sessionId, projectId])
}

model SkillTag {
  id   String @id @default(uuid())
  name String
  slug String @unique

  earnedSkills EarnedSkill[]
}

model EarnedSkill {
  id         String   @id @default(uuid())
  sessionId  String
  skillTagId String
  earnedAt   DateTime @default(now())

  session  GuestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  skillTag SkillTag     @relation(fields: [skillTagId], references: [id], onDelete: Cascade)

  @@unique([sessionId, skillTagId])
}

model ActivityLog {
  id        String   @id @default(uuid())
  sessionId String
  type      String
  metadata  String   @db.Text
  createdAt DateTime @default(now())

  session GuestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}
